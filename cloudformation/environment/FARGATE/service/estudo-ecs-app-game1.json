{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "ECS Service Template",
    "Parameters": {
        "Environment": {
            "Type": "String",
            "Description": "Choose the type of environment",
            "AllowedValues": [
                "dev"
            ],
            "Default": "dev" 
        },
        "ECSCluster": {
            "Type": "String",
            "Description": "The short name of the cluster on which to run your service.",
            "AllowedValues": [
                "estudo-dev-cluster1"
            ],
            "Default": "estudo-dev-cluster1"
        },
        "ServiceName": {
            "Type": "String",
            "Description": "The name of your service. Up to 255 letters (uppercase and lowercase), numbers, and hyphens are allowed.",
            "Default": "app-game10"
        },
        "DesiredCount": {
            "Type": "Number",
            "Description": "The number of instantiations of the specified task definition to place and keep running on your cluster.",
            "Default": 1
        },
        "ContainerImage": {
            "Type": "String",
            "Description": "The image used to start a container.",
            "Default": "791918029132.dkr.ecr.us-east-1.amazonaws.com/estudo:hit-game-app10"
        },
        "ContainerPort": {
            "Type": "Number",
            "Description": "The port number on the container that is bound to the user-specified or automatically assigned host port.",
            "Default": 80
        },
        "HealthCheckPath": {
            "Type": "String",
            "Default": "/healthcheck"
        },
        "TaskSize": {
            "Type": "String",
            "Description": "How much CPU and memory to use with each task or each container within a task",
            "AllowedValues": [
                "0.5GB-0.25vCPU",
                "1GB-0.25vCPU",
                "1GB-0.5vCPU",
                "2GB-0.25vCPU",
                "2GB-0.5vCPU",
                "2GB-1vCPU",
                "4GB-1vCPU",
                "4GB-2vCPU",
                "18GB-4vCPU"
            ],
            "Default": "0.5GB-0.25vCPU"
        },
        "ServiceType": {
            "Type": "String",
            "Description": "Service type.",
            "AllowedValues": [
                "External"
            ],
            "Default": "External"
        },
        "RulePriority": {
            "Type": "Number",
            "Description": "The rule priority. A listener can't have multiple rules with the same priority.",
            "Default": 1
        },
        "PathPattern": {
            "Type": "String",
            "Description": "One path patterns to compare against the request URL.",
            "Default": "/*"
        },
        "HostName": {
            "Type": "String",
            "Description": "One host names",
            "Default": "app-game10.estudocloud.io"
        },
        "LoadBalancerStackName": {
            "Type": "String",
            "Default": "estudo-alb10"
        },
        "VpcStackName": {
            "Type": "String",
            "Description": "VPC stack name.",
            "AllowedValues": [
                "estudo-vpc"
            ],
            "Default": "estudo-vpc"
        },
        "ServiceDiscoveryStackName": {
            "Type": "String",
            "Description": "Service Discovery stack name.",
            "AllowedValues": [
                "estudo-vpc-map"
            ],
            "Default": "estudo-vpc-map"
        },
        "DnsRecordType": {
            "Type": "String",
            "Description": "The type of the resource, which indicates the type of value that Route 53 returns in response to DNS queries.",
            "AllowedValues": [
                "A",
                "AAAA",
                "CNAME",
                "SRV"
            ],
            "Default": "A"
        }
    },
    "Conditions": {
        "InternalServiceTypeCondition": {
            "Fn::Equals": [
                {
                    "Ref": "ServiceType"
                },
                "Internal"
            ]
        },
        "ExternalServiceTypeCondition": {
            "Fn::Equals": [
                {
                    "Ref": "ServiceType"
                },
                "External"
            ]
        }
    },
    "Mappings": {
        "EnvironmentMap": {
            "dev": {
                "Prefix": "dev"
            }
        },
        "DomainMap": {
            "estudo": {
                "Prefix": "estudo",
                "AccountId": "791918029132"
            }
        },
        "AccountMap": {
            "791918029132": {
                "Prefix": "estudo",
                "Name": "dev"
            }
        },
        "TaskSizeMap": {
            "0.5GB-0.25vCPU": {
                "Memory": 512,
                "Cpu": "256"
            },
            "1GB-0.25vCPU": {
                "Memory": 1024,
                "Cpu": "256"
            },
            "1GB-0.5vCPU": {
                "Memory": 1024,
                "Cpu": "512"
            },
            "2GB-0.25vCPU": {
                "Memory": 2048,
                "Cpu": "256"
            },
            "2GB-0.5vCPU": {
                "Memory": 2048,
                "Cpu": "512"
            },
            "2GB-1vCPU": {
                "Memory": 2048,
                "Cpu": "1024"
            },
            "4GB-1vCPU": {
                "Memory": 4096,
                "Cpu": "1024"
            },
            "4GB-2vCPU": {
                "Memory": 4096,
                "Cpu": "2048"
            },
            "18GB-4vCPU": {
                "Memory": 18432,
                "Cpu": "4096"
            }
        }
    },
    "Resources": {
        "TaskRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}-TaskRole",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2008-10-17",
                    "Statement": [
                        {
                            "Sid": "",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ecs-tasks.amazonaws.com"
                                ]
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                }
            }
        },
        "ExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}-ExecutionRole",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "AssumeRolePolicyDocument": {
                    "Version": "2008-10-17",
                    "Statement": [
                        {
                            "Sid": "",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ecs-tasks.amazonaws.com"
                                ]
                            },
                            "Action": "sts:AssumeRole"
                        }
                    ]
                },
                "ManagedPolicyArns": [
                    "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
                ]
            }
        },
        "ECSTaskDefinition": {
            "Type": "AWS::ECS::TaskDefinition",
            "DependsOn": [
                "LogGroup"
            ],
            "Properties": {
                "Family": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "TaskRoleArn": {
                    "Ref": "TaskRole"
                },
                "ExecutionRoleArn": {
                    "Ref": "ExecutionRole"
                },
                "NetworkMode": "awsvpc",
                "RequiresCompatibilities": [
                    "FARGATE"
                ],
                "Memory": {
                    "Fn::FindInMap": [
                        "TaskSizeMap",
                        {
                            "Ref": "TaskSize"
                        },
                        "Memory"
                    ]
                },
                "Cpu": {
                    "Fn::FindInMap": [
                        "TaskSizeMap",
                        {
                            "Ref": "TaskSize"
                        },
                        "Cpu"
                    ]
                },
                "ContainerDefinitions": [
                    {
                        "Name": {
                            "Fn::Sub": [
                                "${Arg2}-${Arg1}-${ServiceName}",
                                {
                                    "Arg1": {
                                        "Fn::FindInMap": [
                                            "EnvironmentMap",
                                            {
                                                "Ref": "Environment"
                                            },
                                            "Prefix"
                                        ]
                                    },
                                    "Arg2": {
                                        "Fn::FindInMap": [
                                            "AccountMap",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            "Prefix"
                                        ]
                                    }
                                }
                            ]
                        },
                        "Image": {
                            "Ref": "ContainerImage"
                        },
                        "Cpu": {
                            "Fn::FindInMap": [
                                "TaskSizeMap",
                                {
                                    "Ref": "TaskSize"
                                },
                                "Cpu"
                            ]
                        },
                        "PortMappings": [
                            {
                                "ContainerPort": {
                                    "Ref": "ContainerPort"
                                },
                                "Protocol": "tcp"
                            }
                        ],
                        "Memory": {
                            "Fn::FindInMap": [
                                "TaskSizeMap",
                                {
                                    "Ref": "TaskSize"
                                },
                                "Memory"
                            ]
                        },
                                                
                        "Essential": "true",
                        "LogConfiguration": {
                            "LogDriver": "awslogs",
                            "Options": {
                                "awslogs-region": {
                                    "Ref": "AWS::Region"
                                },
                                "awslogs-group": {
                                    "Ref": "LogGroup"
                                },
                                "awslogs-stream-prefix": "ecs"
                            }
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": [
                                "${Arg2}-${Arg1}-${ServiceName}-task-definition",
                                {
                                    "Arg1": {
                                        "Fn::FindInMap": [
                                            "EnvironmentMap",
                                            {
                                                "Ref": "Environment"
                                            },
                                            "Prefix"
                                        ]
                                    },
                                    "Arg2": {
                                        "Fn::FindInMap": [
                                            "AccountMap",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            "Prefix"
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "Domain",
                        "Value": {
                            "Fn::FindInMap": [
                                "AccountMap",
                                {
                                    "Ref": "AWS::AccountId"
                                },
                                "Name"
                            ]
                        }
                    }
                ]
            }
        },
        "LogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": {
                    "Fn::Sub": [
                        "/aws/ecs/${Arg2}-${Arg1}-${ServiceName}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "RetentionInDays": 7
            }
        },
        "SecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": {
                    "Fn::Sub": [
                        "Security group dedicated to ${ServiceName} - Environment: ${Arg2} - Domain: ${Arg1}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "GroupName": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}-security-group",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIP":"10.5.0.0/16"
                    }
                ],
  
                "VpcId": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${VpcStackName}-VpcId"
                    }
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": [
                                "${Arg2}-${Arg1}-${ServiceName}-security-group",
                                {
                                    "Arg1": {
                                        "Fn::FindInMap": [
                                            "EnvironmentMap",
                                            {
                                                "Ref": "Environment"
                                            },
                                            "Prefix"
                                        ]
                                    },
                                    "Arg2": {
                                        "Fn::FindInMap": [
                                            "AccountMap",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            "Prefix"
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "Domain",
                        "Value": {
                            "Fn::FindInMap": [
                                "AccountMap",
                                {
                                    "Ref": "AWS::AccountId"
                                },
                                "Name"
                            ]
                        }
                    }
                ]
            }
        },
        "TargetGroup": {
            "Condition": "ExternalServiceTypeCondition",
            "Type": "AWS::ElasticLoadBalancingV2::TargetGroup",
            "Properties": {
                "HealthCheckEnabled": true,
                "HealthCheckIntervalSeconds": 60,
                "HealthCheckPath": {
                    "Ref": "HealthCheckPath"
                },
                "HealthCheckPort": {
                    "Ref": "ContainerPort"
                },
                "HealthCheckProtocol": "HTTP",
                "HealthCheckTimeoutSeconds": 30,
                "HealthyThresholdCount": 3,
                "UnhealthyThresholdCount": 3,
                "Matcher": {
                    "HttpCode": 200
                },
                "TargetGroupAttributes": [
                    {
                        "Key": "deregistration_delay.timeout_seconds",
                        "Value": 120
                    }
                ],
                "Name": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "Port": {
                    "Ref": "ContainerPort"
                },
                "Protocol": "HTTP",
                "TargetType": "ip",
                "VpcId": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${VpcStackName}-VpcId"
                    }
                }
            }
        },
        "ListenerRule": {
            "Condition": "ExternalServiceTypeCondition",
            "Type": "AWS::ElasticLoadBalancingV2::ListenerRule",
            "Properties": {
                "ListenerArn": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${LoadBalancerStackName}-ListenerArn"
                    }
                },
                "Priority": {
                    "Ref": "RulePriority"
                },
                "Conditions": [
                    {
                        "Field": "path-pattern",
                        "Values": [
                            {
                                "Ref": "PathPattern"
                            }
                        ]
                    },
                    {
                        "Field": "host-header",
                        "Values": [
                            {
                                "Ref": "HostName"
                            }
                        ]
                    }
                ],
                "Actions": [
                    {
                        "Type": "forward",
                        "TargetGroupArn": {
                            "Ref": "TargetGroup"
                        }
                    }
                ]
            }
        },
        "InternalService": {
            "Condition": "InternalServiceTypeCondition",
            "Type": "AWS::ECS::Service",
            "Properties": {
                "Cluster": {
                    "Ref": "ECSCluster"
                },
                "DeploymentConfiguration": {
                    "MinimumHealthyPercent": 100,
                    "MaximumPercent": 200
                },
                "DeploymentController": {
                    "Type": "ECS"
                },
                "DesiredCount": {
                    "Ref": "DesiredCount"
                },
                "LaunchType": "FARGATE",
                "SchedulingStrategy": "REPLICA",
                "NetworkConfiguration": {
                    "AwsvpcConfiguration": {
                        "AssignPublicIp": "DISABLED",
                        "SecurityGroups": [
                            {
                                "Ref": "SecurityGroup"
                            }
                        ],
                        "Subnets": [
                            {
                                "Fn::ImportValue": {
                                    "Fn::Sub": "${VpcStackName}-PrivateSubnet1"
                                }
                            },
                            {
                                "Fn::ImportValue": {
                                    "Fn::Sub": "${VpcStackName}-PrivateSubnet2"
                                }
                            }
                        ]
                    }
                },
                "ServiceRegistries": [
                    {
                        "RegistryArn": {
                            "Fn::GetAtt": [
                                "ServiceDiscovery",
                                "Arn"
                            ]
                        }
                    }
                ],
                "PlatformVersion": "1.4.0",
                "ServiceName": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "TaskDefinition": {
                    "Ref": "ECSTaskDefinition"
                }
            }
        },
        "ExternalService": {
            "Condition": "ExternalServiceTypeCondition",
            "Type": "AWS::ECS::Service",
            "DependsOn": [
                "ListenerRule"
            ],
            "Properties": {
                "Cluster": {
                    "Ref": "ECSCluster"
                },
                "DeploymentConfiguration": {
                    "MinimumHealthyPercent": 100,
                    "MaximumPercent": 200
                },
                "DeploymentController": {
                    "Type": "ECS"
                },
                "DesiredCount": {
                    "Ref": "DesiredCount"
                },
                "HealthCheckGracePeriodSeconds": 120,
                "LaunchType": "FARGATE",
                "SchedulingStrategy": "REPLICA",
                "LoadBalancers": [
                    {
                        "TargetGroupArn": {
                            "Ref": "TargetGroup"
                        },
                        "ContainerPort": {
                            "Ref": "ContainerPort"
                        },
                        "ContainerName": {
                            "Fn::Sub": [
                                "${Arg2}-${Arg1}-${ServiceName}",
                                {
                                    "Arg1": {
                                        "Fn::FindInMap": [
                                            "EnvironmentMap",
                                            {
                                                "Ref": "Environment"
                                            },
                                            "Prefix"
                                        ]
                                    },
                                    "Arg2": {
                                        "Fn::FindInMap": [
                                            "AccountMap",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            "Prefix"
                                        ]
                                    }
                                }
                            ]
                        }
                    }
                ],
                "NetworkConfiguration": {
                    "AwsvpcConfiguration": {
                        "AssignPublicIp": "DISABLED",
                        "SecurityGroups": [
                            {
                                "Ref": "SecurityGroup"
                            }
                        ],
                        "Subnets": [
                            {
                                "Fn::ImportValue": {
                                    "Fn::Sub": "${VpcStackName}-PrivateSubnet1"
                                }
                            },
                            {
                                "Fn::ImportValue": {
                                    "Fn::Sub": "${VpcStackName}-PrivateSubnet2"
                                }
                            }
                        ]
                    }
                },
                "ServiceRegistries": [
                    {
                        "RegistryArn": {
                            "Fn::GetAtt": [
                                "ServiceDiscovery",
                                "Arn"
                            ]
                        }
                    }
                ],
                "PlatformVersion": "1.4.0",
                "ServiceName": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "TaskDefinition": {
                    "Ref": "ECSTaskDefinition"
                }
            }
        },
        "ServiceDiscovery": {
            "Type": "AWS::ServiceDiscovery::Service",
            "Properties": {
                "DnsConfig": {
                    "DnsRecords": [
                        {
                            "Type": {
                                "Ref": "DnsRecordType"
                            },
                            "TTL": 60
                        }
                    ]
                },
                "Name": {
                    "Fn::Sub": [
                        "${Arg2}-${Arg1}-${ServiceName}",
                        {
                            "Arg1": {
                                "Fn::FindInMap": [
                                    "EnvironmentMap",
                                    {
                                        "Ref": "Environment"
                                    },
                                    "Prefix"
                                ]
                            },
                            "Arg2": {
                                "Fn::FindInMap": [
                                    "AccountMap",
                                    {
                                        "Ref": "AWS::AccountId"
                                    },
                                    "Prefix"
                                ]
                            }
                        }
                    ]
                },
                "NamespaceId": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${ServiceDiscoveryStackName}-NamespaceId"
                    }
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Fn::Sub": [
                                "${Arg2}-${Arg1}-${ServiceName}",
                                {
                                    "Arg1": {
                                        "Fn::FindInMap": [
                                            "EnvironmentMap",
                                            {
                                                "Ref": "Environment"
                                            },
                                            "Prefix"
                                        ]
                                    },
                                    "Arg2": {
                                        "Fn::FindInMap": [
                                            "AccountMap",
                                            {
                                                "Ref": "AWS::AccountId"
                                            },
                                            "Prefix"
                                        ]
                                    }
                                }
                            ]
                        }
                    },
                    {
                        "Key": "Environment",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "Domain",
                        "Value": {
                            "Fn::FindInMap": [
                                "AccountMap",
                                {
                                    "Ref": "AWS::AccountId"
                                },
                                "Name"
                            ]
                        }
                    }
                ]
            }
        }
    }
  }
  